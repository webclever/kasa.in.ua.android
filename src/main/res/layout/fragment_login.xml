<ScrollView
    tools:context="webclever.sliding_menu.FragmentLogin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout  android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/page_login_social_networks"
        android:id="@+id/textView67"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <LinearLayout android:id="@+id/linLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:weightSum="4"
        android:layout_below="@+id/textView67"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageViewFacebook"
            android:contentDescription="@null" />


        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_vk"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageViewVK"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/sign_in_button"
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_height="70dp"
            android:src="@mipmap/ic_googleplus"
            android:contentDescription="@null" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/page_login_login_password"
        android:id="@+id/textView70"
        android:layout_below="@+id/linLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/page_login_email"
        android:id="@+id/textView71"
        android:layout_below="@+id/textView70"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@drawable/back"
        android:id="@+id/editTextEmailLogin"
        android:layout_below="@+id/textView71"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/page_login_password"
        android:id="@+id/textView72"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/editTextEmailLogin"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/back"
        android:id="@+id/editText25"
        android:layout_below="@+id/textView72"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/page_login_enter"
        android:background="@drawable/button_selector"
        android:id="@+id/buttonLogin"
        android:textColor="@color/white"
        android:layout_below="@+id/editText25"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/page_login_forgot_password"
        android:id="@+id/textView73"
        android:background="?android:selectableItemBackground"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
</ScrollView>
