<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/page_location_kasa_select_city"
        android:id="@+id/sel_kassa"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:id="@+id/select_city_spinner"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/sel_kassa"
        android:layout_alignStart="@+id/sel_kassa"
        android:layout_marginBottom="2dp" />

    <ListView
        android:id="@+id/list_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_row_hover_end_color"
        android:layout_below="@+id/select_city_spinner"
        android:layout_marginTop="2dp" />
</RelativeLayout>