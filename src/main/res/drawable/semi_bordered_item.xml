<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="3dip"
                android:bottomRightRadius="3dip"/>
            <stroke android:width="1dip" android:color="#ff4500" />
            <gradient android:angle="-90" android:startColor="#ee4000" android:endColor="#FF6347"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="3dip"
                android:bottomRightRadius="3dip"/>
            <stroke android:width="1dip" android:color="#ff4500" />
            <solid android:color="#FF6347"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="3dip"
                android:bottomRightRadius="3dip"/>
            <stroke android:width="1dip" android:color="#ff4500" />
            <gradient android:angle="-90" android:startColor="#ee4000" android:endColor="#FF6347" />
        </shape>
    </item>
</selector>